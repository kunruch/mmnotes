doctype html
block vars
html(lang='en-US')
  head
    meta(charset='UTF-8')
    meta(http-equiv='x-ua-compatible', content='ie=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title #{title} - mmnotes
    meta(name='description', content=description)
    meta(property='og:title', content=title)
    meta(property='og:type', content='website')
    meta(property='og:url', content=page.path)
    meta(property='og:image', content=site.url + 'img/mmnotes-featured.png')
    link(rel='canonical', href=page.url)
    link(href='/styles/main.css', rel='stylesheet')
    style
      include ./../_includes/_icons.css
    block styles
    link(rel='icon', href=site.url + 'img/mmnotes-favicon-32x32.png', sizes='32x32')
    link(rel='icon', href=site.url + 'img/mmnotes-favicon-192x192.png', sizes='192x192')
    link(rel='apple-touch-icon-precomposed', href=site.url + 'img/mmnotes-favicon-180x180.png')
    meta(name='msapplication-TileImage', content=site.url + 'img/mmnotes-favicon-270x270.png')
  body#top
    include ./../_includes/_icons.svg
    block content
  block scripts
