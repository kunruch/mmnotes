doctype html
block vars
html(lang='en-US')
    head
        meta(charset='UTF-8')
        meta(http-equiv='x-ua-compatible', content='ie=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1')
        title #{title} - mmnotes
        meta(name='description', content=description)
        meta(property='og:title', content=title)
        meta(property='og:type', content='website')
        meta(property='og:url', content=page.path)
        meta(property='og:image', content=site.url + 'img/mmnotes-featured.png')
        link(rel='canonical', href=page.url)
        link(href='/styles/main.css', rel='stylesheet')
        style
            include ./../partials/_icons.css
        block styles
        link(rel='icon', href=site.url + 'img/mmnotes-favicon-32x32.png', sizes='32x32')
        link(rel='icon', href=site.url + 'img/mmnotes-favicon-192x192.png', sizes='192x192')
        link(rel='apple-touch-icon-precomposed', href=site.url + 'img/mmnotes-favicon-180x180.png')
        meta(name='msapplication-TileImage', content=site.url + 'img/mmnotes-favicon-270x270.png')
    body#top
        include ./../partials/_icons.svg
        header.header
            .container
                .header-left
                    a(href='/').site-branding
                        h1.title
                          div(style="width:24px;height:24px;margin:4px;float:left")
                            include ./../partials/_mmnotes.svg
                          span notes
                div Text | Markdown
                div.header-right
                    nav(role="navigation")
                        ul.menu
                            li.menu-item
                                a(href="#") Help
                                ul.sub-menu
                                    li.menu-item
                                        a(href=site.github + "issues/new", target="_blank") Report an Issue
                                    li.menu-item
                                        a(href=site.github + "issues", target="_blank") View all Issues
                                    li.menu-item
                                        a(href=site.github + "blob/master/LICENSE.md", target="_blank") License Info
                                    li.menu-item
                                        a(href="/about/") About
                            li.menu-item
                                a(href=site.github, target="_blank")
                                    | <svg class="icon icon-github"><use xlink:href="#icon-github"></use></svg>
                            li.menu-item
                               a(href=site.twitter, target="_blank")
                                    | <svg class="icon icon-twitter"><use xlink:href="#icon-twitter"></use></svg>
        block content
    block scripts
