{
  "name": "mmnotes",
  "description": "A minimal modern online note taking app",
  "author": "Kanishk Kunal",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kunruch/mmnotes.git"
  },
  "bugs": {
    "url": "https://github.com/kunruch/mmnotes/issues"
  },
  "homepage": "https://mmnotes.kunruchcreations.com/",
  "scripts": {
    "clean": "mmpilot clean",
    "mk-dest": "shx mkdir -p public/scripts",
    "dev-build-app": "npm run mk-dest && browserify -e app/main.js -o public/scripts/app.js",
    "dev-build-pages": "mmpilot clean && mmpilot build -c _mmpilot.yml,_mmpilot-dev.yml",
    "dev-watch-app": "npm run mk-dest && watchify -vd -p browserify -e app/main.js -o public/scripts/app.js",
    "dev-watch-pages": "mmpilot watch -c _mmpilot.yml,_mmpilot-dev.yml",
    "serve": "mmpilot serve",
    "dev": "npm-run-all dev-build-pages --parallel dev-watch-app dev-watch-pages serve",
    "lint": "eslint --ext .js,.vue src",
    "build-app": "npm run mk-dest && cross-env NODE_ENV=production browserify -g envify -p [ vueify/plugins/extract-css -o public/styles/app.css ] -e app/main.js | uglifyjs -c warnings=false -m > public/scripts/app.js",
    "build-pages": "mmpilot build",
    "build": "npm run build-pages && npm run build-app",
    "deploy": "npm run clean && npm run build && firebase deploy"
  },
  "browserify": {
    "transform": [
      "vueify",
      "babelify"
    ]
  },
  "dependencies": {
    "firebase": "^3.4.0",
    "marked": "^0.3.6",
    "mmcss": "^0.2.3",
    "vue": "^2.0.0-rc.1",
    "vuefire": "^1.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.0.0",
    "babel-plugin-transform-runtime": "^6.0.0",
    "babel-preset-es2015": "^6.0.0",
    "babel-preset-stage-2": "^6.0.0",
    "babel-runtime": "^6.0.0",
    "babelify": "^7.2.0",
    "browserify": "^13.1.0",
    "browserify-hmr": "^0.3.1",
    "cross-env": "^2.0.0",
    "envify": "^3.4.1",
    "eslint": "^3.3.0",
    "eslint-config-standard": "^5.3.5",
    "eslint-plugin-html": "^1.5.2",
    "eslint-plugin-promise": "^2.0.1",
    "eslint-plugin-standard": "^2.0.0",
    "http-server": "^0.9.0",
    "mmpilot": "^0.1.7",
    "node-sass": "^3.10.0",
    "npm-run-all": "^2.3.0",
    "proxyquireify": "^3.0.1",
    "shx": "^0.1.4",
    "uglify-js": "^2.5.0",
    "vueify": "^9.0.0",
    "watchify": "^3.4.0"
  }
}
